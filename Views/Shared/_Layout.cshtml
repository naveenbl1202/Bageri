<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Skaftö Bageri WMS</title>

    <!-- Bootstrap CSS (Add this if it's not already included) -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        .navbar-custom {
            background-color: #f8f9fa; /* Light grey background */
        }

        .btn-blue {
            background-color: #007bff; /* Bootstrap's blue color */
            color: white;
        }

            .btn-blue:hover {
                background-color: #0056b3; /* Darker shade on hover */
            }

        .navbar-nav.ml-auto {
            margin-left: auto;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-custom">
        <div class="container">
            <a class="navbar-brand" href="#">Skaftö Bageri</a>

            <!-- Check if user is logged in to display Dashboard button -->
            @if (ViewData["UserId"] != null)
            {
                <a href="/Account/Dashboard" class="btn btn-blue ml-2">Dashboard</a> <!-- Dashboard Button -->
            }

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    @* Check if user is logged in to hide login button *@
                    @if (ViewData["UserId"] == null)
                    {
                        <li class="nav-item">
                            <a href="/Account/Login" class="btn btn-blue mr-2">Login</a>
                        </li>
                        <li class="nav-item">
                            <a href="/Account/Register" class="btn btn-blue">Register</a>
                        </li>
                    }
                    @* Logout button (only shown if user is logged in) *@
                    @if (ViewData["UserId"] != null)
                    {
                        <li class="nav-item">
                            <a href="/Account/Logout" class="btn btn-blue mr-2">Logout</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container mt-4">
        @RenderBody() <!-- Renders the content of the specific page being loaded -->
    </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.1/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
